{
  "name": "Dev Container with .NET, React",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "GitHub.copilot"
      ]
    }
  },
  "forwardPorts": [3000, 5000, 5001],
  "postCreateCommand": "cd backend && dotnet restore && cd ../ && cd frontend && npm install",
  "remoteUser": "vscode"
}
